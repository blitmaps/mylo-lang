{
  "name": "mylo-debug",
  "displayName": "Mylo Debugger",
  "version": "0.1.5",
  "publisher": "mylo-lang",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Debuggers",
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "mylo",
        "aliases": ["Mylo", "mylo"],
        "extensions": [".mylo"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [{
        "language": "mylo",
        "scopeName": "source.mylo",
        "path": "./syntaxes/mylo.tmLanguage.json"
    }],
    "breakpoints": [
      {
        "language": "mylo"
      }
    ],
    "debuggers": [
      {
        "type": "mylo",
        "label": "Mylo Debug",
        "program": "./extension.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a mylo file",
                "default": "${file}"
                },
              "cwd": {
                "type": "string",
                "description": "Program working directory",
                "default": "${workspaceFolder}"
              },
              "env": {
                "type": "object",
                "description": "Environment variables to pass to the program",
                "default": {}
                }
            }
          }
        }
      }
    ]
  },
  "activationEvents": [
    "onDebug",
    "onLanguage:mylo"
  ],
  "main": "./extension.js"
}
