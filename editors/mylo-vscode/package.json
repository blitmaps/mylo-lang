{
  "name": "mylo-debug",
  "displayName": "Mylo Debugger",
  "version": "0.1.0",
  "publisher": "mylo-lang",
  "engines": { "vscode": "^1.75.0" },
  "categories": ["Debuggers"],
  "contributes": {
    "debuggers": [{
      "type": "mylo",
      "label": "Mylo Debug",
      "program": "./extension.js",
      "runtime": "node",
      "configurationAttributes": {
        "launch": {
          "required": ["program"],
          "properties": {
            "program": {
              "type": "string",
              "description": "Absolute path to a mylo file",
              "default": "${file}"
            }
          }
        }
      }
    }]
  },
  "activationEvents": [
    "onDebug"
  ],
  "main": "./extension.js"
}