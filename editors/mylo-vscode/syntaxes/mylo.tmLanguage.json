{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Mylo",
    "patterns": [
        { "include": "#comments" },
        { "include": "#strings" },
        { "include": "#keywords" },
        { "include": "#constants" },
        { "include": "#storage" },
        { "include": "#support" },
        { "include": "#numbers" },
        { "include": "#operators" },
        { "include": "#functions" }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.double-slash.mylo",
                    "match": "//.*$"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.mylo",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        { "name": "constant.character.escape.mylo", "match": "\\\\." }
                    ]
                },
                {
                    "name": "string.quoted.byte.mylo",
                    "begin": "b\"",
                    "end": "\"",
                    "patterns": []
                },
                {
                    "name": "string.quoted.format.mylo",
                    "begin": "f\"",
                    "end": "\"",
                    "patterns": [
                        { 
                            "name": "constant.character.escape.mylo", 
                            "match": "\\{[^}]+\\}",
                            "comment": "Highlight interpolation {x}"
                        }
                    ]
                }
            ]
        },
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.mylo",
                    "match": "\\b(if|else|for|in|ret|break|continue|forever|import|mod|module_path)\\b"
                }
            ]
        },
        "storage": {
            "patterns": [
                {
                    "name": "storage.type.mylo",
                    "match": "\\b(var|struct|enum|fn)\\b"
                }
            ]
        },
        "constants": {
            "patterns": [
                {
                    "name": "constant.language.boolean.mylo",
                    "match": "\\b(true|false)\\b"
                }
            ]
        },
        "support": {
            "patterns": [
                {
                    "name": "support.function.mylo",
                    "match": "\\b(print)\\b"
                }
            ]
        },
        "functions": {
            "patterns": [
                {
                    "name": "entity.name.function.mylo",
                    "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\()"
                }
            ]
        },
        "numbers": {
            "patterns": [
                {
                    "name": "constant.numeric.mylo",
                    "match": "\\b\\d+(\\.\\d+)?\\b"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.mylo",
                    "match": "\\+|\\-|\\*|\\/|%|=|==|!=|<|>|<=|>=|::|->"
                }
            ]
        }
    },
    "scopeName": "source.mylo"
}
